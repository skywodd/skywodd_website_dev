# OVH PHP configuration
SetEnv PHP_VER 5_4
SetEnv REGISTER_GLOBALS 0

# Apache mod_indexer configuration
Options -Indexes
IndexIgnore */*

# URL rewrite engine on
RewriteEngine On

# URL rewrite configuration for www redirection
RewriteCond %{HTTP_HOST} ^www\.skywodd\.net$
RewriteRule ^(.*) http://skywodd.net/$1 [L,R=301]

# URL rewrite configuration for friendly-url
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.php

